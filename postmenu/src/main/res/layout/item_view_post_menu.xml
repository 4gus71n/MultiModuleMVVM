<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.kimboo.postmenu.ui.adapters.PostMenuItemViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_margin="4dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:imageUrl="@{viewModel.imgurGalleryPost.getGalleryCoverImageUrl()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                tools:src="@drawable/test" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlackOverlay"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    style="@style/TextAppearance.AppCompat.Medium.Inverse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:text="@{viewModel.imgurGalleryPost.title}"
                    tools:text="Post title Post title Post title Post title Post title Post title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.kimboo.core.ui.CompatTintTextView
                        style="@style/TextAppearance.AppCompat.Small.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_favorite_black_24dp"
                        app:tintColor="@color/colorAccent"
                        app:text="@{viewModel.imgurGalleryPost.favoriteCount.toString()}"
                        tools:text="23" />

                    <com.kimboo.core.ui.CompatTintTextView
                        style="@style/TextAppearance.AppCompat.Small.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:drawableLeft="@drawable/ic_comment_black_24dp"
                        app:tintColor="@color/colorAccent"
                        app:text="@{viewModel.imgurGalleryPost.commentCount.toString()}"
                        tools:text="45" />

                </LinearLayout>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>